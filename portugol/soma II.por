programa {
  funcao inicio() {

    inteiro a, b, result, quadradoa, quadradob, resultquadrado

    escreva("Valor de A:")
    leia(a)

    escreva("Valor de B:")
    leia(b)

    result = (a + b)

    escreva("\nValor de A + B é: ", result)

    quadradoa = (a * a)
    quadradob = (b * b)

    resultquadrado = quadradoa + quadradob

    escreva("\nO valor da soma dos quadrado é: ", resultquadrado)

    
  }
}
