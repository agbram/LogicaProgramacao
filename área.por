programa {
  funcao inicio() {

    inteiro lado, area, dobro

    escreva("Cálculo da Área do quadrado!\n")
    escreva("\nValor do lado: ")
    leia(lado)

    area = lado * lado

    escreva("\nA área do quadrado é: ",area, "m²\n")

    dobro = area * 2
    
    escreva("\nO valor do dobro da área é ", dobro, "m²\n")


    
  }
}
